<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: helloworld.xml 74 2010-12-01 22:04:52Z chdemko $ -->
<form>
	<fieldset name="essential">
		<field
			name="id"
			type="hidden"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>
		<field
			name="name"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_NAME_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="address"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_ADDRESS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="city"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_CITY_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="province"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_PROVINCE_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="postal_code"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_POSTAL_CODE_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="phone_number"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_PHONE_NUMBER_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="email_address"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_EMAIL_ADDRESS_LABEL"
			class="inputbox"
			size="50"
			required="false"
		/>
	</fieldset>
	<fieldset name="media">
		<field
			name="video_id"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_VIDEO_ID_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
	</fieldset>
	<fieldset name="social">
		<field
			name="facebook"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_FACEBOOK_LABEL"
			class="inputbox"
			size="100"
			required="true"
		/>
		<field
			name="twitter"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_TWITTER_LABEL"
			class="inputbox"
			size="100"
			required="true"
		/>
		<field
			name="email_friend"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_EMAIL_FRIEND_LABEL"
			class="inputbox"
			size="100"
			required="true"
		/>
		<field
			name="rss"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_RSS_LABEL"
			class="inputbox"
			size="100"
			required="true"
		/>
	</fieldset>
	<fieldset name="configuration" addfieldpath="administrator/components/com_bizview/fields">
		<field
			name="site_url"
			type="text"
			label="COM_BIZVIEW_FIELD_CLIENT_URL_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="template"
			label="COM_BIZVIEW_FIELD_CLIENT_TEMPLATE_LABEL"
			type="templates"
			class="imputbox"
			required="true"
		/>
	</fieldset>
	<fieldset name="hours">
		<field
			name="sunday"
			type="text"
			label="COM_BIZVIEW_FIELD_SUNDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="monday"
			type="text"
			label="COM_BIZVIEW_FIELD_MONDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="tuesday"
			type="text"
			label="COM_BIZVIEW_FIELD_TUESDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="wednesday"
			type="text"
			label="COM_BIZVIEW_FIELD_WEDNESDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="thursday"
			type="text"
			label="COM_BIZVIEW_FIELD_THURSDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="friday"
			type="text"
			label="COM_BIZVIEW_FIELD_FRIDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
		<field
			name="saturday"
			type="text"
			label="COM_BIZVIEW_FIELD_SATURDAY_HOURS_LABEL"
			class="inputbox"
			size="50"
			required="true"
		/>
	</fieldset>
	
</form>

