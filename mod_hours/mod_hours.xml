<?xml version="1.0" encoding="utf-8"?>
<extension 	type="module"	version="2.5"	client="site"	method="upgrade">
	<name>BizView Hours</name>
	<author>Julie Santerre</author>
	<creationDate>February 2012</creationDate>
	<description>Module to add hours of operation</description>
	<files>
		<filename module="mod_hours">mod_hours.php</filename>
		<filename>mod_hours.xml</filename>
		<folder>fields</folder>
		<filename>index.html</filename>	
	</files>
	<config>
		<fields name="params" addfieldpath="/modules/mod_hours/fields">
			<fieldset name="basic">
				<field name="id" type="clients" label="BizView's Clients:" />
				<field type="text" name="color" default="#ffffff" label="Background Color" />
			</fieldset>
		</fields>
	</config>
</extension>
