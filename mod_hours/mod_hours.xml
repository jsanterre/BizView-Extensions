<?xml version="1.0" encoding="utf-8"?>
<extension 	type="module"	version="2.5"	client="site"	method="upgrade">
	<name>BizView Hours</name>
	<author>Julie Santerre</author>
	<creationDate>February 2012</creationDate>
	<description>Module to add hours of operation</description>
	<files>
		<filename module="mod_hours">mod_hours.php</filename>
		<filename>mod_hours.xml</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>	
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="text" name="sunday" default="" label="Sunday" />
				<field type="text" name="monday" default="" label="Monday" />
				<field type="text" name="tuesday" default="" label="Tuesday" />
				<field type="text" name="wednesday" default="" label="Wednesday" />
				<field type="text" name="thursday" default="" label="Thursday" />
				<field type="text" name="friday" default="" label="Friday" />
				<field type="text" name="saturday" default="" label="Saturday" />
			</fieldset>
		</fields>
	</config>
</extension>
