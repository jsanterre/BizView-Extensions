<?xml version="1.0" encoding="utf-8"?>
<extension 	type="module"	version="2.5"	client="site"	method="upgrade">
	<name>BizView Contact</name>
	<author>Julie Santerre</author>
	<creationDate>February 2012</creationDate>
	<description>Module to add Contact Information</description>
	<files>
		<filename module="mod_contact">mod_contact.php</filename>
		<filename>mod_contact.xml</filename>
		<folder>tmpl</folder>
		<folder>images</folder>
		<filename>index.html</filename>	
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="text" name="address" default="" label="Address" />
				<field type="text" name="city" default="Winnipeg" label="City" />
				<field type="text" name="province" default="Manitoba" label="Province" />
				<field type="text" name="postalCode" default="" label="Postal Code" />
				<field type="text" name="phone" default="" label="Phone Number" />
				<field type="text" name="email" default="" label="Email Address" />
				<field type="text" name="color1" default="" label="Social Color" />
				<field type="text" name="color2" default="" label="Address Color" />
			</fieldset>
		</fields>
	</config>
</extension>
