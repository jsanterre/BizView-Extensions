<?xml version="1.0" encoding="utf-8"?>
<extension 	type="module"	version="2.5"	client="site"	method="upgrade">
	<name>BizView Contact</name>
	<author>Julie Santerre</author>
	<creationDate>February 2012</creationDate>
	<description>Module to add Contact Information</description>
	<files>
		<filename module="mod_contact">mod_contact.php</filename>
		<filename>mod_contact.xml</filename>
		<folder>images</folder>
		<folder>fields</folder>
		<filename>index.html</filename>	
	</files>
	<config>
		<fields name="params" addfieldpath="/modules/mod_contact/fields">
			<fieldset name="basic">
				<field name="id" type="clients" label="BizView's Clients:" />
				<field type="text" name="socialgradient1" default="#ffffff" label="Social Color Gradient 1" />
				<field type="text" name="socialgradient2" default="#ffffff" label="Social Color Gradient 2" />
				<field type="text" name="addressBackground" default="" label="Address Background Color" />
			</fieldset>
		</fields>
	</config>
</extension>
